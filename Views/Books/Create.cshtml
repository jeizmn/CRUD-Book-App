@model CRUDApp.Models.Book

<form asp-action="Create" asp-area="Books" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Book Title:</label>
                <input asp-for="Title" type="text" class="form-control required" placeholder="Enter Book Title"
                    tabindex="1">
            </div>
            <div class="form-group">
                <label>Author:</label>
                <input asp-for="Author" type="text" class="form-control required" placeholder="Enter Author Name"
                    tabindex="2">
            </div>
            <div class="form-group">
                <label>ISBN:</label>
                <input asp-for="ISBN" type="text" class="form-control required" placeholder="Enter ISBN" tabindex="3">
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Create Book</button>
                    <a asp-action="Index" asp-controller="Books" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>