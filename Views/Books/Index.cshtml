@model List<CRUDApp.Models.Book>
@* Retrieve the Pager object from ViewBag *@
@{
    Pager pager = new Pager();

    int pageNo = 0;
    // Check if ViewBag.Pager is not null, update pager and pageNo
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Books" class="btn btn-success">Create</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <td>Book Title</td>
                    <td>Author</td>
                    <td>ISBN</td>
                    <td>Manage</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Author</td>
                        <td>@item.ISBN</td>
                        <td>
                            <a title="Edit" asp-action="Edit" asp-controller="Books" asp-route-id="@item.Id"><i
                                    class="fa-solid fa-pen-to-square"></i></a>
                            <a title="Delete" asp-action="Delete" asp-controller="Books" asp-route-id="@item.Id"><i
                                    class="fa-solid fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination section -->
<div class="container">
    <!-- Check if there are multiple pages -->
    @if (pager.TotalPages > 0)
    {
        <!-- Display pagination links -->
        <ul class="pagination justify-content-end">
            @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
            {
                <!-- Highlight the current page -->
                <li class="page-item @(pge== pager.CurrentPage? "active" : "")">
                    <!-- Link to navigate to the specified page in BooksController's Index action -->
                    <a class="page-link" asp-controller="Books" asp-action="Index" asp-route-pg="@pge"> @pge</a>
                </li>
            }
        </ul>
    }
</div>